<p id="notice"><%= notice %></p>

<h1>Productos</h1>

<table>
  <thead>
    <tr>
      <th>Categoria</th>
      <th>Subcategoria</th>
      <th>Marca</th>
      <th>Modelo</th>
      <th>condición</th>
      <th>Descripción</th>
      <th>Precio S/.</th>
      <th>Características</th>
      <th>Unidad</th>
      <th>Color</th>
      <th>Proveedor</th>
      <th>Stock</th>
      <th>Material</th>
      <th>Imagen</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.category %></td>
        <td><%= product.subcategory %></td>
        <td><%= product.brand %></td>
        <td><%= product.model %></td>
        <td><%= product.condition %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= product.characteristic %></td>
        <td><%= product.unit %></td>
        <td><%= product.color %></td>
        <td><%= product.supplier %></td>
        <td><%= product.stock %></td>
        <td><%= product.material %></td>
        <% if product.product_img.attached? %>
        <td><%= image_tag product.product_img, style:"width: 200px; height: 200px; text-align: center;"  %></td>
            <% else %>
              <script>
                alert("no se pudo la imagen")
              </script>
        <% end %>
        <td><%= link_to 'Mostrar', product %></td>
        <td><%= link_to 'Editar', edit_product_path(product) %></td>
        <td><%= link_to 'Eliminar', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

